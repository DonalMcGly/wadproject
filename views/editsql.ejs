<% include ../partials/header %>
<div class="row">
    <h1>Edit a Product</h1>
     <div class="row"><br>
  <div class="grid-container">
      <% res1.forEach(function(product) { %>
         <form accept-charset="UTF-8" action="/editsql/ <%= product.id %>" method="post">
             <div class="item">
                 <label for="name">Name:</label>
                 <input name="name" type="text" value="<%= product.Name %>"/>
                 
                <label for="price">Price:</label>
                 <input name="price" type="text" value="<%= product.Price %>"/>
                <label for="image">Image:</label>
                <input name="image" type="text" value="<%= product.image %>"/>
                
                 <label for="description">Description:</label>
                 <input name="description" type="text" value="<%= product.Description %>"/>
                <button class="button">Edit the product</button>
         </div>
         </form>   
    </div>
  <% }); %>
</div>
<% include ../partials/footer %>
</body>
</html>