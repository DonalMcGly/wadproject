<% include ../partials/header %>
<div class="row">
    <h1>Add More Athletes</h1>
      <div class="row"><br>
    <div class="grid-container">
     <form accept-charset="UTF-8" id="uploadform" ref="uploadform" action="/add" method="post" enctype="multipart/form-data">
         <div class="item">
             <label for="name">Name:</label>
             <input name="name" type="text" placeholder="Please enter athletes full name"  pattern="[a-zA-Z\s]+" title="Enter letters only" required />
           
             <label for="sport">Sport:</label>
             <input name="sport" type="text" placeholder="Please enter their sport" pattern="[a-zA-Z\s]+" title="Enter letters only" required /><br>
             
             <label for="country">Country:</label>
             <input name="country" type="text" placeholder="Please enter where they are from" pattern="[a-zA-Z\s]+" title="Enter letters only" required/><br>

             <label for="dob">Date of birth:</label>
             <input name="dob" type="text" placeholder="YYYY-MM-DD" required 
pattern="(?:19|20)[0-9]{2}-(?:(?:0[1-9]|1[0-2])-(?:0[1-9]|1[0-9]|2[0-9])|(?:(?!02)(?:0[1-9]|1[0-2])-(?:30))|(?:(?:0[13578]|1[02])-31))" 
title="Enter a date in this format YYYY-MM-DD"/>

             <label for="image">Image:</label>
             <input class="button" type="file" name="sampleFile" required/><br>
            
            <button class="button">Add Athletes</button>
         </div>
         </form>   
    </div>
</div>

<% include ../partials/footer %>
   
</body>
    
</html>